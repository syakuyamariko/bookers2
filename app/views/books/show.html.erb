<!--自分の本の詳細ページ-->


<!-- User info・New Book -->
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table table-hover">


          <h1>Book detail</h1>
          <tbody>
            <div>
              <tr>
              <div>
              <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
              <td><%= link_to @book.user.name, user_path(@user.id) %></td>
              <td><%= link_to @book.title, edit_book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <td><% if @book.user == current_user %></td>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success edit_book_87531" %></td>
              <td><%= link_to "Destroy", book_path(@book),  class: "btn btn-sm btn-danger destroy_book_87531", method: :delete %></td>
              </tr>
          <tbody>
            <% end %>
        </table>
