<!--プロフィール編集ページ-->

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <div>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>
  <div>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>
  <div>
  <label for="input Introduction">introduction</label>
  <%= f.text_field :introduction, id:"input Introduction" %>
  </div>
  <div><%= f.submit "Update User" %></div>
<% end %>